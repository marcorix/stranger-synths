<h1>My Synths</h1>
<% if current_user.synths.empty? %>
  <h3>You dont have any synth listed yet!</h3>
  <%= link_to 'Add one', new_synth_path, class: 'btn btn-primary'%>
<% else %>
  <ul>
    <% current_user.synths.each do |synth| %>
      <li>
        <%= link_to synth_path(synth) do %>
          <%= synth.brand %> <%= synth.name %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
