<h1>My Bookings</h1>
<% if current_user.bookings.empty? %>
  <h3>You dont have any booking yet!</h3>
<% else %>
  <% current_user.bookings.each do |booking| %>
    <%=  link_to synth_path(booking.synth) do %>
      <%= booking.synth.brand %> <%= booking.synth.name %>
    <% end %>
    <p>From: <%= booking.start_date %></p>
    <p>To: <%= booking.end_date %></p>
  <% end %>
<% end %>
